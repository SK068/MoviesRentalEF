@page
@model MoviesRentalEF.Pages.RentedMovie.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>RentedMovies</h4>
<hr />
<!--- Add css to change the font family----->
<div class="row" style="font-family:cursive;">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="RentedMovies.MovieId" class="control-label"></label>
                <select asp-for="RentedMovies.MovieId" class="form-control" asp-items="ViewBag.MovieId"></select>
            </div>
            <div class="form-group">
                <label asp-for="RentedMovies.CustomerId" class="control-label"></label>
                <select asp-for="RentedMovies.CustomerId" class="form-control" asp-items="ViewBag.CustomerId"></select>
            </div>
            <div class="form-group">
                <label asp-for="RentedMovies.Movies" class="control-label"></label>
                <input asp-for="RentedMovies.Movies" class="form-control" />
                <span asp-validation-for="RentedMovies.Movies" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
